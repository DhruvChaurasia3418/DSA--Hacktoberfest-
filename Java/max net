//User function Template for Java

class Solution

{ 

    public static int findSum(int A[],int N) 

    {

        int largest = Integer.MIN_VALUE;

     int smallest = Integer.MAX_VALUE;

     

     for (int i=0;i<A.length;i++)

         if (A[i] < smallest)

             smallest = A[i];

            else if (A[i] > largest)

                largest = A[i];

        return largest+smallest;

    }

}
